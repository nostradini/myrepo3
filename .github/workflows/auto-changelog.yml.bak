name: Generate changelog
on:
  release:
    types: [created, edited]
  workflow_dispatch:

jobs:
  generate-changelog:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
      with:
        fetch-depth: 0
    - uses: nostradini/test_actions@main
      with:
        ACCESS_TOKEN: ${{secrets.TEST_TOKEN}}
        PATH: 'CHANGELOG.md'
        COMMIT_MESSAGE: 'docs(CHANGELOG): Update release notes'
        TYPE: '#major:Breaking Changes,#minor:New Features,feat:New Features,fix:Bug Fixes,#patch:Bug Fixes,docs:Documentation,refactor:Refactor,perf:Performance Improvements'
